{
    "name": "narrowspark/coding-standard",
    "description": "The Narrowspark Coding Standard for is a set of phpstan and php-cs-fixer rules applied to all Narrowspark projects.",
    "type": "library",
    "keywords": [
        "narrowspark",
        "cs",
        "cs-fixer",
        "config",
        "php-cs-fixer",
        "phpstan",
        "coding-standard"
    ],
    "license": "MIT",
    "homepage": "https://github.com/narrowspark/coding-standard",
    "authors": [
        {
            "name": "Daniel Bannert",
            "email": "d.bannert@anolilab.de",
            "homepage": "http://www.anolilab.de",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1",
        "narrowspark/php-cs-fixer-config": "^3.0",
        "pepakriz/phpstan-exception-rules": "^0.2.0",
        "phpstan/phpstan": "^0.10.2",
        "phpstan/phpstan-deprecation-rules": "^0.10.2",
        "phpstan/phpstan-phpunit": "^0.10.2",
        "phpstan/phpstan-strict-rules": "^0.10.2",
        "thecodingmachine/phpstan-strict-rules": "^0.10.3"
    },
    "config": {
        "sort-packages": true
    },
    "support": {
        "issues": "https://github.com/narrowspark/coding-standard/issues",
        "source": "https://github.com/narrowspark/coding-standard"
    }
}
